# ==============================================
# PRODUCTION CONFIGURATION для VM
# ==============================================
# ВАЖНО: Скопируйте этот файл в .env и измените значения!
# Для локальной разработки используйте docker-compose.dev.yml

# Database Configuration
DATABASE_URL=postgresql://postgres:change_me_in_production@postgres:5432/psychology_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=psychology_bot

# Backend Configuration
SECRET_KEY=your-secret-key-min-32-characters-change-in-prod-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
DEBUG=false

# CORS Configuration для VM (замените YOUR_VM_IP на IP вашей VM)
# Пример для nip.io: BACKEND_CORS_ORIGINS=["http://192.168.1.100.nip.io:3000","http://192.168.1.100.nip.io:8000"]

#BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
BACKEND_CORS_ORIGINS=["http://YOUR_VM_IP.nip.io:3000","http://YOUR_VM_IP.nip.io:8000"]

# Admin User (для seed данных при первом запуске)
ADMIN_EMAIL=admin@psychologist-bot.com
ADMIN_PASSWORD=change_me_in_production
ADMIN_NAME=Admin

# Scheduler Configuration
SCHEDULER_TIMEZONE=Europe/Moscow
MORNING_TASK_TIME=09:00
EVENING_REMINDER_TIME=20:00

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
# TELEGRAM_WEBHOOK_URL=https://yourdomain.com/telegram  # Опционально: для webhook режима
BACKEND_API_URL=http://backend:8000

# Frontend Configuration для VM (замените YOUR_VM_IP на IP вашей VM)
# Пример для nip.io: NEXT_PUBLIC_API_URL=http://192.168.1.100.nip.io:8000
NEXT_PUBLIC_API_URL=http://YOUR_VM_IP.nip.io:8000
NEXT_PUBLIC_APP_NAME=Psychology Bot

# Docker Configuration
DOCKER_RESTART_POLICY=unless-stopped

# Опциональные настройки для production
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# REDIS_URL=redis://redis:6379/0
# LOG_LEVEL=INFO
