# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/psychology_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=psychology_bot

# Backend Configuration
SECRET_KEY=your-secret-key-min-32-characters-change-in-prod-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
DEBUG=false
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Admin User (для seed данных при первом запуске)
ADMIN_EMAIL=admin@psychologist-bot.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
# TELEGRAM_WEBHOOK_URL=https://yourdomain.com/telegram  # Опционально: для webhook режима (production с доменом), по умолчанию используется polling
BACKEND_API_URL=http://backend:8000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Psychology Bot

# Docker Configuration
DOCKER_RESTART_POLICY=unless-stopped

# Опциональные настройки для production
