# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# Backend API Configuration
BACKEND_API_URL=http://localhost:8000

# Scheduler Settings
SCHEDULER_TIMEZONE=Europe/Moscow
MORNING_TASK_TIME=09:00
EVENING_REMINDER_TIME=20:00
REMINDER_CHECK_INTERVAL_MINUTES=5

# Admin Token (для планировщика - получение всех пользователей)
ADMIN_TOKEN=your_admin_jwt_token_here

# Logging
LOG_LEVEL=INFO
DEBUG=False

# Optional: Redis (для персистентности состояний)
# REDIS_URL=redis://localhost:6379/0

# Optional: Sentry (мониторинг ошибок)
# SENTRY_DSN=your_sentry_dsn_here

# Optional: Database (если бот работает напрямую с БД)
# DATABASE_URL=postgresql://user:password@localhost:5432/psychologist_bot

# Optional: Webhook (вместо polling)
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
